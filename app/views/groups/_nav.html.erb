<script type="text/javascript">
  $(".join_group, .leave_group").on("ajax:success", function(event) {
    var $links = $("[name=" + event.currentTarget.name + "]");
    $links.toggleClass('nonmember');
    $links.toggleClass('is_member');
  });
</script>