<% if @photo.persisted? %>
  <img src="<%= @photo.image.url %>">
<% end %>

<div class="errors"><%= @errors %></div>
<%= form_for(@photo, :html => { :multipart => true }) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description%>
  </p>
  <%= f.file_field :image %>
  <%= f.submit @photo.persisted? ? 'Update!' : 'Upload!' %>
<% end %>