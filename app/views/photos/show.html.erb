<div id="content" class="span8">
  <div class="photo">
    <img src="<%= @photo.image.url(:medium) %>">
  </div>
  <div>
    <h1><%= @photo.title %></h1>
    <p><%= @photo.description.html_safe unless @photo.description.nil? %></p>
  </div>
</div>
<div id="sidebar" class="span4">
  <%= render :partial => 'groups_form' %>
  
  <% if @albums %>
    <%= render :partial => 'albums_form' %>
  <% end %>  
</div>
